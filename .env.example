# ====================================
# Clarifai Environment Configuration
# ====================================
# 1. Copy this file to '.env' in the root directory
# 2. Fill in your actual values below
# 3. NEVER commit .env to git (it's in .gitignore)

# ====================================
# SUPABASE CONFIGURATION (REQUIRED FOR MULTI-USER)
# ====================================
# Get these from Supabase Dashboard -> Settings -> API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Get this from Supabase Dashboard -> Settings -> Database -> Connection string (URI)
SUPABASE_DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-ref.supabase.co:5432/postgres

# ====================================
# AI SERVICES (REQUIRED)
# ====================================
# Google Gemini API Key - Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ====================================
# STORAGE (OPTIONAL)
# ====================================
# Vercel Blob Storage - For persistent video storage in production
# Get from Vercel Dashboard -> Storage -> Blob
# Leave empty to use local storage only
BLOB_READ_WRITE_TOKEN=

# ====================================
# CORS CONFIGURATION
# ====================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# For production, add your Vercel URL:
# ALLOWED_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# ====================================
# FRONTEND CONFIGURATION
# ====================================
# These are used by the Next.js frontend
# IMPORTANT: Frontend env vars must start with NEXT_PUBLIC_

# Supabase (same as backend values above)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Backend API URLs (auto-detected if not set)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ====================================
# APPLICATION SETTINGS
# ====================================
DEBUG=True
MAX_FILE_SIZE=52428800

# Storage directories (relative to backend/)
UPLOAD_DIR=storage
VIDEO_DIR=media/videos
CLIPS_DIR=media/clips

# ====================================
# MANIM VIDEO SETTINGS
# ====================================
# Quality: low_quality, medium_quality, high_quality, production_quality
MANIM_QUALITY=medium_quality

# ====================================
# LEGACY (OPTIONAL - for backward compatibility)
# ====================================
# Old API key auth - leave empty to disable
# API_KEY=